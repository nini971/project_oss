{% if app.user %}
{{ form_start(form, {'attr': {'id':'form_spot'}}) }}

<div class="row">
    <div class="col-sm-4">
        <div class="input-group ">
            <span class="input-group-addon" id="basic-addon1">Name</span>
            {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Type</span>
            {{ form_widget(form.spotType, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon">Access</span>
            <span class="form-control">
            <span class="rating" id="rating_access">
                <input type="radio" class="rating-input"
                       id="rating-input-1-5_access" name="rating_access" value="5">
                <label for="rating-input-1-5_access" class="rating-star"></label>
                <input type="radio" class="rating-input"
                       id="rating-input-1-4_access" name="rating_access" value="4">
                <label for="rating-input-1-4_access" class="rating-star"></label>
                <input type="radio" class="rating-input"
                       id="rating-input-1-3_access" name="rating_access" value="3">
                <label for="rating-input-1-3_access" class="rating-star"></label>
                <input type="radio" class="rating-input"
                       id="rating-input-1-2_access" name="rating_access" value="2">
                <label for="rating-input-1-2_access" class="rating-star"></label>
                <input type="radio" class="rating-input"
                       id="rating-input-1-1_access" name="rating_access" value="1">
                <label for="rating-input-1-1_access" class="rating-star"></label>
            </span>
                </span>
            {{ form_widget(form.spotAcces, {'attr':{'style':'display:none;'}}) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Latitude</span>
            {{ form_widget(form.lattitude, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Longitude</span>
            {{ form_widget(form.longitude, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Area</span>
            {{ form_widget(form.area, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
</div>

<div class="row" id="div_form_proto">
    <div class="panel panel-default" id="form_prototype"
         data-prototype="{{ form_widget(form.fishInSpot.vars.prototype)|e }}">
        <div class="panel-heading">
            <h3 class="panel-title">Fish in Spot<button id="add-another-fish" class="btn btn-success">Add</button></h3>

        </div>
        <div class="panel-body" id="list_fish_add">
            {{ form_widget(form.fishInSpot) }}
            {% for fishInSpot in form.fishInSpot %}
                <span>
                    {{ form_errors(fishInSpot) }}
                    {{ form_widget(fishInSpot) }}
                </span>
            {% endfor %}
        </div>
    </div>
    {{ form_widget(form.Submit, {'attr':{'class':'btn btn-primary'}}) }}
</div>


{{ form_end(form) }}

<div id="modalFish" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add Fish</h4>
            </div>
            <div class="modal-body">
                <label for="select_fish">Fish : </label>
                <select id="select_fish">
                    {% for fish in fishs %}
                        <option value={{ fish.id }}>{{ fish.fishName }}</option>
                    {% endfor %}
                </select>
                <ul>
                    <li class="detailFish">
                        <label>Présence : </label>
                        <span class="rating" id="rating_existence">
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-5_existence" name="rating_existence" value="5">
                            <label for="rating-input-1-5_existence" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-4_existence" name="rating_existence" value="4">
                            <label for="rating-input-1-4_existence" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-3_existence" name="rating_existence" value="3">
                            <label for="rating-input-1-3_existence" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-2_existence" name="rating_existence" value="2">
                            <label for="rating-input-1-2_existence" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-1_existence" name="rating_existence" value="1">
                            <label for="rating-input-1-1_existence" class="rating-star"></label>
                        </span>
                        <br>
                        <label>Taille : </label>
                            <span class="rating" id="rating_size">
                                <input type="radio" class="rating-input"
                                       id="rating-input-1-5_size" name="rating_size" value="5">
                                <label for="rating-input-1-5_size" class="rating-star"></label>
                                <input type="radio" class="rating-input"
                                       id="rating-input-1-4_size" name="rating_size" value="4">
                                <label for="rating-input-1-4_size" class="rating-star"></label>
                                <input type="radio" class="rating-input"
                                       id="rating-input-1-3_size" name="rating_size" value="3">
                                <label for="rating-input-1-3_size" class="rating-star"></label>
                                <input type="radio" class="rating-input"
                                       id="rating-input-1-2_size" name="rating_size" value="2">
                                <label for="rating-input-1-2_size" class="rating-star"></label>
                                <input type="radio" class="rating-input"
                                       id="rating-input-1-1_size" name="rating_size" value="1">
                                <label for="rating-input-1-1_size" class="rating-star"></label>
                            </span>
                        <br>
                        <label>Attitude : </label>
                            <span class="rating" id="rating_attitude">
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-5_atittude" name="rating_atittude" value="5">
                            <label for="rating-input-1-5_atittude" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-4_atittude" name="rating_atittude" value="4">
                            <label for="rating-input-1-4_atittude" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-3_atittude" name="rating_atittude" value="3">
                            <label for="rating-input-1-3_atittude" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-2_atittude" name="rating_atittude" value="2">
                            <label for="rating-input-1-2_atittude" class="rating-star"></label>
                            <input type="radio" class="rating-input"
                                   id="rating-input-1-1_atittude" name="rating_atittude" value="1">
                            <label for="rating-input-1-1_atittude" class="rating-star"></label>
                        </span>
                    </li>
                </ul>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="add_new_fish_valid" type="button" class="btn btn-success">Add</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{% else %}
    Vous n'êtes pas connecté !
{% endif %}